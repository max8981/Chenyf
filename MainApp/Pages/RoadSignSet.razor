    <Panel Header="分类">
        <SetTypeSort/>
    </Panel>
    <Panel Header="Top">
        <SetFont Name="TopFont" />
        <Icon Type="font-size" Theme="outline" />
        <AntDesign.InputNumber @bind-Value="@ProductRoadSign.Config.TopSize" />
        <SetColor Name="TopColor" />
        <SetColor Name="TopBackGroundColorl" />
        <p>
            <SetDataSource Name="TopSource" />
        </p>
    </Panel>
    <Panel Header="Center">
        <SetFont Name="CenterFont" />
        <Icon Type="font-size" Theme="outline" />
        <AntDesign.InputNumber @bind-Value="@ProductRoadSign.Config.CenterSize" />
        <SetColor Name="CenterColor" />
        <SetColor Name="CenterBackGroundColorl" />
        <p>
            <SetDataSource Name="CenterSource" />
        </p>
    </Panel>
    <Panel Header="Bottom">
        <SetFont Name="BottomFont" />
        <Icon Type="font-size" Theme="outline" />
        <AntDesign.InputNumber @bind-Value="@ProductRoadSign.Config.BottomSize" />
        <SetColor Name="BottomColor" />
        <SetColor Name="BottomBackGroundColorl" />
        <p>
            <SetDataSource Name="BottomSource" />
        </p>
    </Panel>
</Collapse>
